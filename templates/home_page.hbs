<div class="app-section app-section--black margin-top-20">
  <div class="left">
    {{!-- {{breadcrumbs}} --}}
  </div>

  <div class="fiu-page-header fiu-page-header--homepage">
    <div class="fiu-width-container center no-top-padding">
      <span class="fiu-page-header__image-mask"></span>
      <img src="{{asset 'apprentice-sparks.png'}}" alt="background-image" class="fiu-page-header__image fiu-fade-in" />
    </div>
  </div> 
</div>

<div class="fiu-grad-row fiu-homepage-card-container">
  <span class="fiu-grad-row__bg"></span>
  <div class="fiu-width-container">
    <div class="govuk-grid-row fiu-flex-row">
      
      {{#each categories}}
        {{#is name "Help Articles"}}
          {{#each sections}}

            <div class="govuk-grid-column-one-third z-index-3">
              <div class="fiu-panel-homepage">
                <div class="fiu-feature-text">
                  <strong class="fiu-tag fiu-tag--citizens fiu-panel__tag">Apprentices</strong>
                  <h2 class="govuk-heading-l fiu-panel-homepage__heading">{{name}}</h2>
                </div>
                <p class="fiu-panel-homepage__content">{{description}}</p>
                <a href="{{url}}" id="fiu-homepage-link-app-hub" class="fiu-button fiu-button--citizens fiu-panel-homepage__button">Learn more <span class="fiu-vh">becoming an apprentice</span></a>
              </div>
            </div>

          {{/each}}
        {{/is}}
      {{/each}}
    
    </div>
  </div>
</div>

<section class="app-section app-section--white">
  <div class="fiu-width-container center margin-top-20" style="min-height: 50px">
    <label>...</label>
  </div>  
</section>

