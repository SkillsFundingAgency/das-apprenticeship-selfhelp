<div class="app-section app-section--black margin-top-20">
  <div class="left">
    {{!-- {{breadcrumbs}} --}}
  </div>
  <div class="fiu-page-header fiu-page-header--homepage">
    <div class="fiu-width-container center no-top-padding">
      <span class="fiu-page-header__image-mask">
        <div class="govuk-grid-row left">
          <div class="govuk-grid-column-two-thirds fiu-page-header__wrap">
            <div class="fiu-feature-text">
                <strong class="fiu-tag fiu-tag--citizens fiu-page-header__tag">Apprentices</strong>
                <h1 class="govuk-heading-xl fiu-page-heading__title-hub">Apprentice Support Center</h1>
            </div>
            <p class="fiu-page-header__content-l govuk-!-width-two-thirds">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Consectetur purus ut faucibus pulvinar elementum integer enim.</p>
            <img class="fiu-page-header__hm-logo" src="{{asset 'hm-government-logo.svg'}}" alt="HM Government logo">
            <h2 class="govuk-heading-l fiu-page-header__sub-heading">Support Articles</h2>
          </div>          
        </div>        
      </span>
      <img src="{{asset 'apprentice-sparks.png'}}" alt="background-image" class="fiu-page-header__image fiu-fade-in" />      
    </div>
  </div>
</div>

<div class="fiu-grad-row fiu-homepage-card-container">
  <span class="fiu-grad-row__bg"></span>
  <div class="fiu-width-container padding-top-100">
    <div class="govuk-grid-row fiu-flex-row">
      {{#each categories}}
        {{#is name 'Help Articles'}}
          {{#each sections}}
              <div class="govuk-grid-column-one-third z-index-3">
                  <div class="fiu-card">
                      <h3 class="fiu-card__heading">{{name}}</h3>
                      <div class="fiu-card__content">
                          {{description}}
                      </div>
                      {{#each articles}}
                          <a href="{{url}}" class="apprentice-green fiu-card__link">Learn more</a>
                      {{/each}}
                  </div>
              </div>
          {{/each}}
        {{/is}}
      {{/each}}    
    </div>
  </div>
</div>

<section class="app-section app-section--white">
  <div class="fiu-width-container center margin-top-20" style="min-height: 50px">
    <label></label>
  </div>  
</section>

<script>
    $(".govuk-list> li:nth-child(1n+4) .article-link").attr('hidden', true);
</script>