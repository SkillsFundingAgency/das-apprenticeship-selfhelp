            </ul>
        </nav>
    </div>
  </nav>
</div>

<div class="app-section app-section--black padding-top-10-px no-bottom-padding">
  <nav aria-label="breadcrumbs" class="fiu-width-container no-top-padding">
        <ol class="govuk-breadcrumbs govuk-breadcrumbs__list">
            <li class="govuk-breadcrumbs__list-item">
                <a href="https://www.apprenticeships.gov.uk" class="white">Home</a>
            </li>            
            <li class="govuk-breadcrumbs__list-item">
                <a href="https://www.apprenticeships.gov.uk/apprentices" class="white">Apprentices</a>
            </li>           
            <li class="govuk-breadcrumbs__list-item white" aria-current="true">
                Apprentice Support Centre
            </li>
        </ol>
    </nav>
  <div class="fiu-page-header fiu-page-header--homepage">
    <div class="fiu-width-container center no-top-padding">
      <span class="fiu-page-header__image-mask">
        <div class="govuk-grid-row left">
          <div class="govuk-grid-column-two-thirds fiu-page-header__wrap home-title-width">
            <div class="fiu-feature-text">
                <strong class="fiu-tag fiu-tag--citizens-accessible fiu-page-header__tag">Apprentices</strong>
                <h1 class="govuk-heading-xl fiu-page-heading__title-hub">Apprentice Support Centre</h1>
            </div>            
            <img class="hm-logo" src="{{asset 'hm-government-logo.svg'}}" alt="HM Government logo">
          </div>          
        </div>        
      </span>
      <img src="{{asset 'apprentice-sparks.png'}}" alt="background-image" class="fiu-page-header__image fiu-fade-in" />      
    </div>
  </div>
</div>

<div class="fiu-grad-row fiu-homepage-card-container">
  <span class="fiu-grad-row__bg"></span>
  <div class="fiu-width-container">
    <div class="govuk-grid-row sections-list">
      {{#each categories}}
        {{#is name 'Help Articles'}}
          {{#each sections}}
              <div class="section-panel z-index-3 auto-height">
                  <div class="fiu-card auto-height margin-bottom-5-px">
                      <h3 class="fiu-card__heading black">{{name}}</h3>
                      <div class="fiu-card__content">
                          {{description}}
                      </div>
                      {{#each articles}}
                          <a href="{{url}}" class="apprentice-green fiu-card__link">Learn more</a>
                      {{/each}}
                  </div>
              </div>
          {{/each}}
        {{/is}}
      {{/each}}    
    </div>
  </div>
</div>

<script>
    $(".govuk-list> li:nth-child(1n+4) .article-link").attr('hidden', true);
</script>